{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.mangadex.org/:path*"
    },
    {
      "source": "/covers/:path*",
      "destination": "https://uploads.mangadex.org/covers/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ]
}